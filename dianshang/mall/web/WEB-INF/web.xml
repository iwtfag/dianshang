<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!--index页面数据-->
    <servlet>
        <servlet-name>QueryServlet</servlet-name>
        <servlet-class>controller.index.QueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryServlet</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>
    <!--detail页面数据-->
    <servlet>
        <servlet-name>DetailServlet</servlet-name>
        <servlet-class>controller.detail.DetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailServlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <!--购物车页从数据库拿数据-->
    <servlet>
        <servlet-name>CarServlet</servlet-name>
        <servlet-class>controller.car.CarDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarServlet</servlet-name>
        <url-pattern>/car</url-pattern>
    </servlet-mapping>
    <!--购物车删除商品条目-->
    <servlet>
        <servlet-name>CarDelete</servlet-name>
        <servlet-class>controller.car.CarDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarDelete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <!--删除全部car商品，结算时候-->
    <servlet>
        <servlet-name>deleteAll</servlet-name>
        <servlet-class>controller.car.DeleteAll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAll</servlet-name>
        <url-pattern>/deleteAll</url-pattern>
    </servlet-mapping>
    <!--购物车增加商品条目-->
    <servlet>
        <servlet-name>CarInsertServlet</servlet-name>
        <servlet-class>controller.car.CarInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarInsertServlet</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>


    <!--登录-->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>controller.login.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--检测是否登录状态-->
    <servlet>
        <servlet-name>getUserInfo</servlet-name>
        <servlet-class>controller.login.GetUserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUserInfo</servlet-name>
        <url-pattern>/getUserInfo</url-pattern>
    </servlet-mapping>

    <!--购物车修改购买数量-->
    <servlet>
        <servlet-name>updateNum</servlet-name>
        <servlet-class>controller.car.updateNumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateNum</servlet-name>
        <url-pattern>/updateNum</url-pattern>
    </servlet-mapping>
    <!--生成订单-->
    <servlet>
        <servlet-name>orderSave</servlet-name>
        <servlet-class>controller.order.OrderSave</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderSave</servlet-name>
        <url-pattern>/orderSave</url-pattern>
    </servlet-mapping>
    <!--展现订单主体-->
    <servlet>
        <servlet-name>queryOrder</servlet-name>
        <servlet-class>controller.order.QueryOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryOrder</servlet-name>
        <url-pattern>/queryOrder</url-pattern>
    </servlet-mapping>

    <!--展现订单数量-->
    <servlet>
        <servlet-name>orderNum</servlet-name>
        <servlet-class>controller.order.OrderNum</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderNum</servlet-name>
        <url-pattern>/orderNum</url-pattern>
    </servlet-mapping>
</web-app>